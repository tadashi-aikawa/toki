[
  // 設定を開く
  {
    "key": "ctrl+j s",
    "command": "workbench.action.openSettingsJson"
  },
  // キーバインド設定を開く
  {
    "key": "ctrl+j k",
    "command": "workbench.action.openGlobalKeybindingsFile"
  },
  // サイドバー表示切り替え
  {
    "key": "cmd+i",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  // コマンドパレット
  {
    "key": "cmd+escape",
    "command": "workbench.action.showCommands"
  },
  // ワークスペースのファイルを開く
  {
    "key": "ctrl+j e",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+j f",
    "command": "workbench.action.quickOpen"
  },
  // ワークスペース全文検索 (Quick Search)
  {
    "key": "ctrl+j g",
    "command": "workbench.action.quickTextSearch"
  },
  // 次/前のタブへ移動
  //     Neovimでも設定が必要 (Neovimエディタのタブ切り替え)
  //     ここで設定してしまうと、Leader keyとなるspaceが奪われてしまうため
  {
    "key": "space l",
    "command": "workbench.action.nextEditorInGroup",
    "when": "!inputFocus"
  },
  {
    "key": "space h",
    "command": "workbench.action.previousEditorInGroup",
    "when": "!inputFocus"
  },
  // 開いているタブの一覧表示
  {
    "key": "space e",
    "command": "workbench.action.showAllEditors",
    "when": "!inputFocus"
  },
  // 新しいNativeタブを開く
  {
    "key": "ctrl+t",
    "command": "workbench.action.newWindowTab"
  },
  // Nativeタブを閉じる
  {
    "key": "ctrl+j q",
    "command": "workbench.action.closeWindow"
  },
  // 次のNativeタブへ移動
  {
    "key": "ctrl+tab",
    "command": "workbench.action.showNextWindowTab"
  },
  {
    "key": "ctrl+tab",
    "command": "-workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
    "when": "!activeEditorGroupEmpty"
  },
  // 前のNativeタブへ移動
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.showPreviousWindowTab"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "-workbench.action.quickOpenLeastRecentlyUsedEditorInGroup",
    "when": "!activeEditorGroupEmpty"
  },
  // クイックフィックス
  {
    "key": "cmd+enter",
    "command": "editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
  },
  // 補完
  {
    "key": "shift+space",
    "command": "simpleAutocomplete.next"
  },
  // 定義表示
  {
    "key": "cmd+d",
    "command": "editor.action.peekDefinition"
  },
  {
    "key": "cmd+s",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
  },
  // パラメータヒント表示
  {
    "key": "ctrl+p",
    "command": "editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
  },
  // 現在ファイルのシンボル一覧表示
  {
    "key": "ctrl+j o",
    "command": "workbench.action.gotoSymbol",
    "when": "!accessibilityHelpIsShown && !accessibleViewIsShown"
  },
  {
    "key": "shift+cmd+o",
    "command": "-workbench.action.gotoSymbol",
    "when": "!accessibilityHelpIsShown && !accessibleViewIsShown"
  },
  // 呼び出し箇所の表示
  {
    "key": "ctrl+j h",
    "command": "references-view.showCallHierarchy",
    "when": "editorHasCallHierarchyProvider"
  },
  {
    "key": "shift+alt+h",
    "command": "-references-view.showCallHierarchy",
    "when": "editorHasCallHierarchyProvider"
  },
  // Markdown Preview
  {
    "key": "cmd+p",
    "command": "markdown.showPreview"
  },
  // 次のマーカー(診断結果)
  {
    "key": "ctrl+cmd+f15",
    "command": "editor.action.marker.next",
    "when": "editorFocus && !editorReadonly"
  },
  // 前のマーカー(診断結果)
  {
    "key": "ctrl+cmd+f16",
    "command": "editor.action.marker.prev",
    "when": "editorFocus && !editorReadonly"
  },
  // 次の変更点
  {
    "key": "shift+cmd+j",
    "command": "workbench.action.compareEditor.nextChange",
    "when": "textCompareEditorVisible || isInDiffEditor"
  },
  // 前の変更点
  {
    "key": "shift+cmd+k",
    "command": "workbench.action.compareEditor.previousChange",
    "when": "textCompareEditorVisible || isInDiffEditor"
  },
  // ターミナル表示 (<Space>,にしたい)
  {
    "key": "ctrl+j t",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  // 現在のタブを閉じる (Neovimエディタ以外の場合用)
  {
    "key": "space q",
    "command": "workbench.action.closeActiveEditor",
    "when": "!inputFocus"
  },
  {
    "key": "ctrl+shift+q",
    "command": "workbench.action.closeActiveEditor"
  },
  // 現在のタブ以外を閉じる (Neovimエディタ以外の場合用)
  {
    "key": "space w",
    "command": "workbench.action.closeOtherEditors",
    "when": "!inputFocus"
  },
  // 閉じたタブを開き直す (Neovimエディタ以外の場合用)
  {
    "key": "space t",
    "command": "workbench.action.reopenClosedEditor",
    "when": "!inputFocus"
  },
  // GitHub Copilotの補完確定
  {
    "key": "cmd+k",
    "command": "editor.action.inlineSuggest.commit"
  },
  {
    "key": "cmd+k",
    "command": "-keybindings.editor.recordSearchKeys"
  },
  {
    "key": "cmd+k",
    "command": "-editor.action.accessibilityHelpConfigureKeybindings"
  },
  {
    "key": "tab",
    "command": "-editor.action.inlineSuggest.commit"
  },
  // 右サイドメニュー切り替え (GitHub Copilotのウィンドウ表示切り替え)
  {
    "key": "cmd+o",
    "command": "workbench.action.toggleAuxiliaryBar"
  },
  {
    "key": "cmd+o",
    "command": "-workbench.action.files.openFile",
    "when": "false"
  },
  {
    "key": "cmd+o",
    "command": "-workbench.action.files.openFolderViaWorkspace",
    "when": "!openFolderWorkspaceSupport && workbenchState == 'workspace'"
  },
  {
    "key": "cmd+o",
    "command": "-workbench.action.files.openFileFolder",
    "when": "isMacNative && openFolderWorkspaceSupport"
  },
  {
    "key": "cmd+o",
    "command": "-workbench.action.files.openLocalFileFolder",
    "when": "remoteFileDialogVisible"
  },
  {
    "key": "alt+cmd+v",
    "command": "-workbench.action.editorDictation.start",
    "when": "hasSpeechProvider && !editorReadonly && !speechToTextInProgress"
  },
  {
    "key": "alt+cmd+b",
    "command": "-workbench.action.toggleAuxiliaryBar"
  },
  // Centerd Layout切り替え
  {
    "key": "cmd+n",
    "command": "workbench.action.toggleCenteredLayout",
    "when": "!isAuxiliaryWindowFocusedContext"
  },
  {
    "key": "cmd+n",
    "command": "-workbench.action.files.newUntitledFile"
  },
  // ---------------------------------------------------
  // VSCode Neovim
  // ---------------------------------------------------
  // Vimの<C-?>を優先
  {
    "key": "ctrl+s",
    "command": "-workbench.action.files.save"
  },
  {
    "command": "vscode-neovim.send",
    "key": "ctrl+s",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<C-s>"
  },
  // 代わりにNORMAL sでフォロー
  {
    "key": "ctrl+shift+s",
    "command": "workbench.action.files.save"
  },
  // Ctrl + Enter を VSCode Neovimで有効にする
  {
    "command": "vscode-neovim.send",
    "key": "ctrl+enter",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<C-CR>"
  },
  {
    "command": "vscode-neovim.send",
    "key": "ctrl+shift+]",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<C-S-]>"
  },
  {
    "command": "vscode-neovim.send",
    "key": "cmd+shift+r",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<D-S-r>"
  },
  // Cmd + ; を VSCode Neovimで有効にする
  {
    "command": "vscode-neovim.send",
    "key": "cmd+;",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "<D-;>"
  },
  // Ctrl + / を VSCode Neovimで有効にする
  // Neovimのようにスクロールにあわせてカーソルも移動する
  {
    "key": "ctrl+d",
    "command": "vscode-neovim.send",
    "args": "<C-d>",
    "when": "editorTextFocus && neovim.init"
  },
  {
    "key": "ctrl+u",
    "command": "vscode-neovim.send",
    "args": "<C-u>",
    "when": "editorTextFocus && neovim.init"
  },
  {
    "key": "ctrl+j c",
    "command": "testing.runCurrentFile",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+[Semicolon] f",
    "command": "-testing.runCurrentFile",
    "when": "editorTextFocus"
  }
]
