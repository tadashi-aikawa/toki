# プレゼンの場合は22
font-size = 16
font-family = "CaskaydiaCove Nerd Font"
# リガチャ防止
font-feature = -dlig

window-height = 50
window-width = 180

macos-option-as-alt = true

window-padding-x = 12
window-padding-y = 3
window-padding-balance = true
window-padding-color = extend

# タブ不要
window-decoration = false

# スクロール速度が速すぎるので下げる
mouse-scroll-multiplier = 0.2

background-image = "~/git/github.com/tadashi-aikawa/toki/mnt/ghostty/background-image.png"
background-image-opacity = "0.1"

# Spaceの左キーでNeovimで利用するものを無効化
# (defaultで設定されていないものは不要)
keybind = super+a=unbind
keybind = super+d=unbind
keybind = super+j=unbind
keybind = super+k=unbind
keybind = super+n=unbind
keybind = super+p=unbind
keybind = super+t=unbind
keybind = super+enter=unbind
keybind = super+left=unbind  
keybind = super+right=unbind
keybind = super+plus=unbind
keybind = super+minus=unbind
# karabinerで無変換 q -> command+w とマップされたあとに Alt+w とマップ
keybind = super+w=esc:w

# aの左キーからのショートカット
keybind = ctrl+n=new_window
keybind = ctrl+t=unbind
# Alt+2 にマップ
keybind = f2=esc:2
# ctrl+tab -> ctrl+tab
keybind = ctrl+tab=text:\x1b[9;5u
# ctrl+shift+tab -> ctrl+shift+tab
keybind = ctrl+shift+tab=text:\x1b[9;6u

# ctrl+shift+w (;q leader)
keybind = ctrl+shift+w>s=new_split:down
keybind = ctrl+shift+w>v=new_split:right
keybind = ctrl+shift+w>k=goto_split:up
keybind = ctrl+shift+w>j=goto_split:down
keybind = ctrl+shift+w>l=goto_split:right
keybind = ctrl+shift+w>h=goto_split:left

# 普段は目が疲れるので無効化
# custom-shader = ./shaders/cursor_blaze.glsl
